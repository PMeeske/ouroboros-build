{
  "stryker-config": {
    "target-framework": "net10.0",
    "coverage-analysis": "perTestInIsolation",
    "mutation-level": "Standard",
    "reporters": [
      "Html",
      "Json",
      "ClearTextSummary"
    ],
    "thresholds": {
      "high": 80,
      "low": 60,
      "break": 50
    },
    "mutate": [
      "src/**/*.cs",
      "!**/bin/**",
      "!**/obj/**",
      "!**/*.g.cs",
      "!**/*.Designer.cs",
      "!**/GlobalUsings.cs",
      "!**/Program.cs",
      "!**/Startup.cs",
      "!**/Tests/**"
    ],
    "ignore-methods": [
      "ToString",
      "GetHashCode",
      "Equals",
      "Dispose",
      "GetEnumerator"
    ],
    "ignore-mutations": [
      "string",
      "StringEmpty"
    ],
    "verbosity": "info",
    "additional-timeout": 10000,
    "max-concurrent-test-runners": 4
  }
}
