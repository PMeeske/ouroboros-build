<Project>
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <LangVersion>14.0</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Copyright>Copyright Â© 2025</Copyright>
    <Version>1.0.0</Version>

    <!-- Code Quality Settings -->
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningsNotAsErrors>CS1591;CS1570;CS1572;CS1573;CS1574</WarningsNotAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <EnforceCodeStyleInBuild>false</EnforceCodeStyleInBuild>
    <EnableNETAnalyzers>false</EnableNETAnalyzers>
    <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
    <RunAnalyzersDuringLiveAnalysis>false</RunAnalyzersDuringLiveAnalysis>
    <AnalysisLevel>latest</AnalysisLevel>

    <!-- Path to ouroboros-build root (parent of this build/ directory) -->
    <OuroborosBuild>$(MSBuildThisFileDirectory)..</OuroborosBuild>
  </PropertyGroup>

  <!-- Include shared global usings for all projects (except test projects and Roslynator) -->
  <ItemGroup Condition="'$(IsTestProject)' != 'true' AND '$(IsRoslynComponent)' != 'true'">
    <Compile Include="$(MSBuildThisFileDirectory)Directory.GlobalUsings.cs" Link="Properties\GlobalUsings.Shared.cs" />
  </ItemGroup>

</Project>
